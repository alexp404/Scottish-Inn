{
  "name": "hotel-management-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "dev:firetv": "ts-node-dev --respawn --transpile-only src/server/firetv-server.ts",
    "simulate:devices": "ts-node src/server/firetv-device-simulator.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "start:firetv": "node dist/server/firetv-server.js",
    "migrate": "ts-node src/utils/migrate.ts",
    "seed-admin": "ts-node src/utils/seedAdmin.ts",
    "test": "jest",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.0",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^3.0.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.6",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "source-map": "^0.6.1",
    "source-map-support": "^0.5.21",
    "supertest": "7.1.3",
    "ts-jest": "^29.1.2",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.6"
  },
  "overrides": {
    "source-map": "^0.6.1"
  }
}
